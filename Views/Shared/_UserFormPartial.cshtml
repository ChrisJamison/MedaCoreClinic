@model WebApplication1.Models.User

<div class="container mt-4">
    <form method="post" asp-action="@ViewData["Action"]">
        <!-- Username -->
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input type="text" id="Username" name="Username" class="form-control" 
                   placeholder="Nhập tên tài khoản" value="@Model?.Username" required />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input type="email" id="Email" name="Email" class="form-control" 
                   placeholder="Nhập địa chỉ Email" value="@Model?.Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input type="password" id="Password" name="Password" class="form-control" 
                   placeholder="Nhập mật khẩu" value="@Model?.Password" minlength="6" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Phone Number -->
        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" 
                   placeholder="Nhập số điện thoại" value="@Model?.PhoneNumber" pattern="[0-9]{10}" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Address -->
        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <textarea id="Address" name="Address" class="form-control" rows="3" 
                      placeholder="Nhập địa chỉ">@Model?.Address</textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <!-- Date of Birth -->
        <div class="mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" 
                   value="@(Model?.DateOfBirth.HasValue == true ? Model?.DateOfBirth.Value.ToString("yyyy-MM-dd") : null)" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <!-- Role -->
        <div class="mb-3">
            <label asp-for="Role" class="form-label"></label>
            <select id="Role" name="Role" class="form-select" required>
                <option value="" selected="@(Model?.Role == null)">-- Select Role --</option>
                <option value="Admin" selected="@(Model?.Role == "Admin")">Admin</option>
                <option value="User" selected="@(Model?.Role == "User")">User</option>
                <option value="Guest" selected="@(Model?.Role == "Guest")">Guest</option>
                <!-- Add more roles as necessary -->
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <!-- Submit and Cancel Buttons -->
        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary">@ViewData["SubmitButtonText"]</button>
            <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Hủy Bỏ</a>
        </div>
    </form>
</div>