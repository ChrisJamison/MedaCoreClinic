<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication</title>

    <!-- Add external stylesheets or custom styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7f7f7;
        }
        .navbar {
            background-color: #007bff;
        }
        .navbar a {
            color: white !important;
        }
        .content-container {
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            max-width: 900px;
        }
        footer {
            text-align: center;
            padding: 1rem;
            margin-top: 2rem;
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>
<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MedaCore Clinic</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            @* <ul class="navbar-nav me-auto"> *@
            @*     <li class="nav-item"> *@
            @*         <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
            @*     </li> *@
            @*     <li class="nav-item"> *@
            @*         <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a> *@
            @*     </li> *@
            @* </ul> *@
            <ul class="navbar-nav">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">Login</a> *@
                    @* </li> *@
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a> *@
                    @* </li> *@
                }
            </ul>
        </div>
    </div>
</nav>

<!-- Content Area -->
<div class="container content-container">
    @RenderBody()
</div>

<!-- Footer -->
<footer>
    <p>&copy; @DateTime.Now.Year - Meda Core Clinic.</p>
</footer>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>