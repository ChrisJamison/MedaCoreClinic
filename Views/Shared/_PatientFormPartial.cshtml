@model WebApplication1.Models.Patient

<div class="container mt-4">
    <form method="post" asp-action="@ViewData["Action"]">
        <div class="mb-3">
            <label for="Name" class="form-label">Họ Tên</label>
            <input type="text" id="Name" name="Name" class="form-control" 
                   placeholder="Nhập họ tên" value="@Model?.Name" required />
        </div>

        <div class="mb-3">
            <label for="PhoneNumber" class="form-label">Số Điện Thoại</label>
            <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" 
                   placeholder="Nhập số điện thoại" value="@Model?.PhoneNumber" 
                   required pattern="[0-9]{10}" />
        </div>

        <div class="mb-3">
            <label for="BirthDate" class="form-label">Ngày Sinh</label>
            <input type="date" id="BirthDate" name="BirthDate" class="form-control" 
                   value="@Model?.BirthDate" required />
        </div>

        <div class="mb-3">
            <label for="Gender" class="form-label">Giới Tính</label>
            <select id="Gender" name="Gender" class="form-select" required>
                <option value="" selected="@((Model?.Gender == null).ToString())">-- Select Gender --</option>
                <option value="Nam" selected="@((Model?.Gender == "Nam").ToString())">Male</option>
                <option value="Nữ" selected="@((Model?.Gender == "Nữ").ToString())">Female</option>
                <option value="Other" selected="@((Model?.Gender == "Khác").ToString())">Other</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="DiseaseName" class="form-label">Tên Bệnh</label>
            <input type="text" id="DiseaseName" name="DiseaseName" class="form-control" 
                   placeholder="Nhập Tên Bệnh" value="@Model?.DiseaseName" required />
        </div>

        <div class="mb-3">
            <label for="Address" class="form-label">Địa Chỉ</label>
            <textarea id="Address" name="Address" class="form-control" rows="3" 
                      placeholder="Nhập Địa Chỉ (optional)">@Model?.Address</textarea>
        </div>

        <div class="mb-3">
            <label for="Details" class="form-label">Chi Tiết Bệnh</label>
            <textarea id="Details" name="Details" class="form-control" rows="3" 
                      placeholder="Nhập Chi Tiết Bệnh (optional)">@Model?.Details</textarea>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary">@ViewData["SubmitButtonText"]</button>
            <a href="@Url.Action("Index", "Patients")" class="btn btn-secondary">Hủy Bỏ</a>
        </div>
    </form>
</div>