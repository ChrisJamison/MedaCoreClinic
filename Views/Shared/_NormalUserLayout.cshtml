<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MedaCore Clinic</title>

    <!-- Include Bootstrap via CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }
        .sidebar {
            width: 250px;
            background-color: #343a40; /* Dark gray */
            color: white;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 0.8rem 1.2rem;
            display: flex;
            align-items: center;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .sidebar i {
            margin-right: 0.8rem;
        }
        .content {
            flex: 1;
            padding: 1rem;
            background-color: #f8f9fa;
        }
        .navbar .navbar-brand {
            color: white;
        }
        .navbar {
            background-color: #007bff;
        }
        .profile-section img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
        }
        .profile-section {
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }
        .profile-section .username {
            margin-left: 15px;
            color: white;
        }
        .divider {
            border-top: 1px solid #6c757d;
            margin: 1rem 0;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <div class="p-3 text-center border-bottom">
            <h4>MedaCore Clinic</h4>
        </div>
        
        <!-- Profile Section -->
        <div class="p-3 profile-section">
            <img src="https://ui-avatars.com/api/?name=User+Name" alt="Profile Picture" />
            <div class="username">
                <strong>@ViewData["Username"]</strong>
                <br />
                @User.Identity.Name
            </div>
        </div>
        <div class="divider"></div>

        <!-- Navigation Links -->
        <a href="/Schedules">
            <i class="bi bi-people"></i> Lịch sử khám bệnh
        </a>
        <a href="/Schedules/Create">
            <i class="bi bi-person-badge"></i> Đăng ký khám bệnh
        </a>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">MedaCore</a>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Logout">Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div>
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</body>
</html>