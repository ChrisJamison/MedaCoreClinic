@model WebApplication1.Models.Service

<div class="container mt-4">
    <form method="post" asp-action="@ViewData["Action"]">
        <div class="row">
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Tên dịch vụ" />
                    <label asp-for="Name">Tên dịch vụ</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Giá dịch vụ" />
                    <label asp-for="Price">Giá dịch vụ</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Department" class="form-control" placeholder="Khoa thực hiện" />
                    <label asp-for="Department">Khoa thực hiện</label>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <textarea asp-for="Description" class="form-control" placeholder="Mô tả dịch vụ" style="height: 135px;"></textarea>
                    <label asp-for="Description">Mô tả</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary">@ViewData["SubmitButtonText"]</button>
            <a href="@Url.Action("Index", "Services")" class="btn btn-secondary">Hủy Bỏ</a>
        </div>
    </form>
</div>